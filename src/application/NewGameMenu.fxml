<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.NewGameController">
   <children>
      <VBox alignment="CENTER" prefHeight="800.0" prefWidth="1000.0">
         <children>
            <HBox alignment="CENTER" maxHeight="100.0" maxWidth="663.0" prefHeight="56.0" prefWidth="663.0">
               <children>
                  <Label fx:id="player1" alignment="CENTER" contentDisplay="CENTER" prefHeight="100.0" prefWidth="150.0" text="Player 1" textAlignment="CENTER" textFill="#680000">
                     <font>
                        <Font name="Consolas Bold" size="30.0" />
                     </font>
                  </Label>
                  <Separator orientation="VERTICAL" prefHeight="56.0" prefWidth="245.0" />
                  <Label fx:id="player2" alignment="CENTER" contentDisplay="CENTER" prefHeight="64.0" prefWidth="169.0" text="Player 2" textAlignment="CENTER" textFill="#652020">
                     <font>
                        <Font name="Consolas Bold" size="30.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <Button fx:id="play" mnemonicParsing="false" onAction="#playActionHandler" prefHeight="100.0" prefWidth="200.0" text="Play">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="chooseplayer" mnemonicParsing="false" onAction="#choosePlayerActionHandler" prefHeight="50.0" prefWidth="200.0" text="Choose players">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="back" mnemonicParsing="false" onAction="#backActionHandler" prefHeight="50.0" prefWidth="200.0" text="Back" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
